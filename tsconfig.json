{
    "version": "2.4.2",
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es6",
        "module": "commonjs",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "esModuleInterop": true, 
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "."
    },
    "exclude": [
        "node_modules"
    ]
}
